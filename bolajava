class bola {
    private String Cor;

    public bola (String cor){
        this.Cor = cor;
    }
    
    public String getCor (){
        return Cor;
    }

    public void setCor (String cor){
        this.Cor = cor;
    }
    public static void main(String[] args) {
        
        bola bola1 = new bola("vermelho");
        
        System.out.println("Cor: " + bola1.getCor()); //Imprime a cor da bola
        
        bola1.setCor ("Azul");
        System.out.println("Nova cor da bola: " + bola1.getCor());
    }
}
    
